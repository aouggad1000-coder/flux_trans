generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Shipment {
  id          String      @id @default(uuid())
  ref         String      @unique
  mode        String
  shipperEmail    String?
  consigneeEmail  String?
  createdAt   DateTime    @default(now())
  updatedAt   DateTime    @updatedAt
  milestones  Milestone[]
  documents   Document[]
}

model Milestone {
  id          String   @id @default(uuid())
  shipmentId  String
  code        String
  occurredAt  DateTime
  data        Json?
  createdAt   DateTime @default(now())
  shipment    Shipment @relation(fields: [shipmentId], references: [id])
}

model Document {
  id          String   @id @default(uuid())
  shipmentId  String
  type        String
  path        String
  createdAt   DateTime @default(now())
  shipment    Shipment @relation(fields: [shipmentId], references: [id])
}
